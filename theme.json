{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,

  "settings": {
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#DAD8CC",
          "name": "Beige"
        },
        {
          "slug": "secondary",
          "color": "#F5F5F5",
          "name": "Grey"
        },
        {
          "slug": "blue",
          "color": "#99ACC3",
          "name": "Blue"
        },
        {
          "slug": "green",
          "color": "#C9C6A5",
          "name": "Green"
        }
      ]
    },
    "layout": {
      "contentSize": "840px",
      "wideSize": "1100px"
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "\"Barlow\", sans-serif",
          "name": "Barlow",
          "slug": "barlow",
          "fontFace": [
            {
              "fontFamily": "Barlow",
              "fontWeight": "100 200 300 400 500 600 700 800 900",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "https://fonts.googleapis.com/css2?family=Barlow:wght@100;200;300;400;500;600;700;800;900&display=swap"
              ]
            }
          ]
        }
      ]
    }
  },
  "styles": {
    "blocks": {
      "core/button": {
        "color": {
          "text": "#000000"
        }
      }
    },
    "elements": {
      "link": {
        "typography": {
          "textDecoration": "none"
        },
        "border": {
          "bottom": {
            "width": "2px",
            "color": "currentColor",
            "style": "solid"
          }
        },
        ":hover": {
          "typography": {
            "textDecoration": "none"
          },
          "border": {
            "bottom": {
              "width": "2px",
              "color": "#111",
              "style": "dotted"
            }
          }
        }
      },
      "h1": {
        "typography": {
          "textTransform": "uppercase"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "area": "header",
      "title": "Header"
    },
    {
      "name": "footer",
      "area": "footer",
      "title": "Footer"
    }
  ]
}
